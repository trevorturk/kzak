<div class="grid_12">

  <h2>Change your password</h2>

  <%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put } do |f| %>
    <%= f.error_messages %>
    <%= f.hidden_field :reset_password_token %>
    <p><%= f.label :password %> <br /> <%= f.password_field :password, :class => 'text' %></p>
    <p><%= f.label :password_confirmation %> <br /> <%= f.password_field :password_confirmation, :class => 'text' %></p>
    <p><%= f.submit "Change my password" %></p>
  <% end %>

</div>